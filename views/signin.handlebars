<div class="container">
  <div><h2>Logging in to Petbook<h2></div>
  <div class="col-md-3 mb-3">
    <form id="signin" name="signin" method="post" action="/signin">
        <div class="form-group">
            <label for="email">Email Address</label>
            <input type="email" class="form-control" name="email" aria-describedby="emailHelp" placeholder="Enter Email Address">
        </div>
        <div class="form-group">
            <label for="password">Password</label>
            <input type="password" class="form-control" name="password" placeholder="Enter Password">
        </div>
        <button type="submit" class="btn btn-login btn-primary">Login</button>
    </form>
  </div>
</div>
